<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory app:title="Основные">
        <SwitchPreference
            android:key="switchNotification"
            android:title="Уведомления"
            app:summaryOff="Включить уведомления"
            app:summaryOn="Выключить уведомления"
            android:defaultValue="true"/>

    </PreferenceCategory>


    <PreferenceCategory app:title="Другое">

        <Preference
            android:key="about_us"
            app:title="О нас" />
        <Preference
            android:key="dialog"
            app:title="Правообладателям"
            android:fragment="com.example.fan.fragments.TestFragment"
            />
        <Preference
            android:key="logout"
            android:title="Выйти из учетной записи"
            />

    </PreferenceCategory>

</PreferenceScreen>
